<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/primary_item"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place: 1"
            android:textColor="#262724"/>

        <TextView
            android:id="@+id/item_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Run ID: 1"
            android:textColor="#262724" />

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: Now"
            android:textColor="#262724" />

        <TextView
            android:id="@+id/item_remaining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remaining Time: 0s"
            android:textColor="#262724" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>